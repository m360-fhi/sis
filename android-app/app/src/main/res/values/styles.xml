<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="MyActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_cast_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="layout_foms_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.8</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="title_forms">
         <item name="android:textColor">@color/tzColorGreyDark</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
     </style>

    <style name="leyend_forms">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@color/tzColorGreyDark</item>
        <item name="android:textSize">@dimen/text_leyend_size</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <style name="foms_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">95dp</item>
         <item name="android:background">@drawable/degrade_app_bar_main</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>
    <style name="foms_bar_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/degrade_app_bar_main</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="foms_bar_teacher_student">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/degrade_app_bar_main</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="layout_btn_save">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="Tooltip2">
        <item name="android:text">qwqwrqwfqwfqwfqwfqwf</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="layout_foms_text_teacher_student">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.7</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout_btn_delete_and_save">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.3</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="target_title_forms">
        <item name="android:textColor">@color/tzColorGreyDark</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="target_leyend_forms">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@color/tzColorGreyDark</item>
        <item name="android:textSize">@dimen/text_leyend_size</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="target_isntructions_form">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/tzColorGreyDark</item>
        <item name="android:textSize">@dimen/text_leyend_size</item>
    </style>

    <style name="questions_forms">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@color/tzColorGreyDark</item>
        <item name="android:textSize">@dimen/text_questions_size</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
