<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/foms_bar">

        <LinearLayout style="@style/layout_foms_text"
            android:layout_weight="6">
            <TextView
                style="@style/title_forms"
                android:gravity="center"
                android:id="@+id/tv_groupIndicator"
                android:text="@string/finance_activity" />
            <TextView
                style="@style/leyend_forms"
                android:paddingLeft="3dp"
                android:text="@string/str_leyend_activities" />

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/fl_part1"
        android:layout_weight=".345"
        android:padding="16dp"
        android:transitionGroup="false">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".345"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textAllCaps="true"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:text="@string/finance_initial_date"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_initial_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="24dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:paddingBottom="10dp"
                        android:textStyle="bold"
                        />
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_initial_date"
                        android:text="@string/finance_select_date"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:textAllCaps="true"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:text="@string/finance_final_date"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="24dp"
                        android:gravity="center_vertical"
                        android:id="@+id/txt_final_date"
                        android:textColor="#000000"
                        android:paddingBottom="10dp"
                        android:textStyle="bold"
                        />
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_final_date"
                        android:text="@string/finance_select_date"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_current_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="40dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/finance_current_balance"

                    android:textSize="24dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:hint="Tick one answer"
                    android:paddingBottom="20dp"
                    android:layout_weight=".60" />

                <com.blackcat.currencyedittext.CurrencyEditText
                    app:allow_negative_values="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/finance_current_balance"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="false"
                    android:background="@drawable/get_collect"
                    android:textColor="#4e4e4e"
                    android:textSize="24dp"
                    android:paddingTop="10dp"
                    android:enabled="false"
                    android:layout_weight=".40"
                    android:gravity="right"
              />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tzColorGrey">
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:text="@string/finance_date"/>
                    <TextView
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="@string/finance_description"/>
                    <TextView
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:textAlignment="center"
                        android:text="@string/finance_deposits"/>
                    <TextView
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:textAlignment="center"
                        android:text="@string/finance_expenditure"/>
                    <!-- <TextView
                         style="@style/Texto_Blanco_Finance"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="2"
                         android:text="@string/finance_balance"/>-->
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_activities"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:nestedScrollingEnabled="true"
                    android:scrollbars="vertical">
                </ListView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </FrameLayout>
</LinearLayout>